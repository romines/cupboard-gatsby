{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "globals": {
    "graphql": true
  },
  "rules": {
    "semi": [
      2,
      "never"
    ],
    "react/no-unescaped-entities": ["error", {"forbid": [">", "\"", "}"]}]
  }
}